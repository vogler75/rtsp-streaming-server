{
  "mqtt": {
    "base_topic": "Videoserver/${hostname}",
    "broker_url": "mqtt://192.168.1.4:1883",
    "client_id": "videoserver-${hostname}",
    "enabled": true,
    "keep_alive_secs": 60,
    "max_packet_size": 268435456,
    "password": null,
    "publish_interval_secs": 5,
    "publish_picture_arrival": false,
    "qos": 0,
    "retain": false,
    "username": null
  },
  "recording": {
    "cleanup_interval_hours": 1,
    "database_path": "recordings",
    "frame_cache": {
      "database_playback_enabled": false,
      "enabled": true,
      "live_buffer_fps": 15,
      "live_buffer_minutes": 5,
      "max_windows_per_camera": 3,
      "mp4_window_minutes": 1,
      "preload_threshold_seconds": 30
    },
    "frame_storage_enabled": false,
    "frame_storage_retention": "1h",
    "max_frame_size": 10485760,
    "mp4_framerate": 5,
    "video_segment_minutes": 1,
    "video_storage_retention": "30d",
    "video_storage_type": "database"
  },
  "server": {
    "admin_token": "test",
    "cameras_directory": "cameras",
    "cors_allow_origin": "*",
    "host": "0.0.0.0",
    "port": 8080,
    "tls": {
      "cert_path": "certs/server.crt",
      "enabled": false,
      "key_path": "certs/server.key"
    }
  },
  "transcoding": {
    "capture_framerate": 5,
    "channel_buffer_size": 50,
    "debug_capture": false,
    "debug_duplicate_frames": false,
    "output_format": "mjpeg",
    "output_framerate": 0
  }
}
